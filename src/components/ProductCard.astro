---
import type { Product } from '../lib/products';
import { getCategoryLabel } from '../lib/products';
import StatusBadge from './StatusBadge.astro';

interface Props {
  product: Product;
}

const { product } = Astro.props;
const { title, price, status, coverImage, tags, category, orbCount, updatedAt } = product.data;
const slug = product.slug;
---

<article
  class="product-card"
  data-category={category}
  data-tags={tags.join(',')}
  data-orb-count={orbCount ?? 0}
  data-price={price}
  data-updated-at={updatedAt.getTime()}
  data-status={status}
>
  <a href={`/products/${slug}`} class="card-link">
    <div class="card-image">
      <img src={coverImage} alt={title} loading="lazy" />
      <div class="card-badge">
        <StatusBadge status={status} size="sm" />
      </div>
    </div>

    <div class="card-body">
      <p class="category">{getCategoryLabel(category)}</p>
      <h3 class="card-title">{title}</h3>
      <p class="card-price">¥{price.toLocaleString()}</p>
      {typeof orbCount === 'number' && <p class="orb">オーブ: {orbCount.toLocaleString()}個</p>}

      {tags.length > 0 && (
        <div class="card-tags">
          {tags.slice(0, 3).map((tag) => (
            <span class="tag-mini">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .product-card {
    background: var(--color-bg-card);
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: box-shadow 0.2s, transform 0.2s;
  }

  .product-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .card-link {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .card-image {
    position: relative;
    aspect-ratio: 1;
    background: var(--color-bg);
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .product-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
  }

  .card-body {
    padding: 1rem;
  }

  .category {
    margin: 0 0 0.375rem;
    font-size: 0.75rem;
    color: var(--color-primary);
    font-weight: 600;
  }

  .card-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-price {
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0 0 0.375rem;
  }

  .orb {
    margin: 0 0 0.75rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  .tag-mini {
    font-size: 0.625rem;
    padding: 0.125rem 0.375rem;
    background: var(--color-bg);
    border-radius: calc(var(--radius) / 2);
    color: var(--color-text-muted);
  }
</style>

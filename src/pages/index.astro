---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductGrid from '../components/ProductGrid.astro';
import TagFilter from '../components/TagFilter.astro';
import { getVisibleProducts, getProductsByTag, getAllTags } from '../lib/products';

// クエリパラメータからタグを取得
const url = new URL(Astro.request.url);
const activeTag = url.searchParams.get('tag') || undefined;

// 商品とタグを取得
const allTags = await getAllTags();
const products = activeTag 
  ? await getProductsByTag(activeTag)
  : await getVisibleProducts();
---

<BaseLayout title="Home" description="商品一覧">
  <div class="container">
    <section class="hero">
      <h1>商品一覧</h1>
      <p>販売中の商品をご覧いただけます</p>
    </section>

    <!-- タグフィルター -->
    {allTags.length > 0 && (
      <section class="filters">
        <TagFilter tags={allTags} activeTag={activeTag} />
      </section>
    )}

    <!-- 商品グリッド -->
    <section class="products">
      <ProductGrid products={products} />
    </section>
  </div>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 2rem 0 3rem;
  }

  .hero h1 {
    font-size: 2rem;
    margin: 0 0 0.5rem;
  }

  .hero p {
    color: var(--color-text-muted);
    margin: 0;
  }

  .filters {
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .products {
    padding: 1rem 0 3rem;
  }
</style>

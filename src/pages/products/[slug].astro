---
// src/pages/products/[slug].astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import StatusBadge from '../../components/StatusBadge.astro';
import { getVisibleProducts, getProductBySlug, shouldShowPurchaseUrl, sanitizeForPublic } from '../../lib/products';

// 静的パス生成
export async function getStaticPaths() {
  const products = await getVisibleProducts();
  return products.map((product) => ({
    params: { slug: product.slug },
  }));
}

const { slug } = Astro.params;
const product = await getProductBySlug(slug as string);

// 商品が見つからない場合は404
if (!product) {
  return Astro.redirect('/404');
}

// notesを除外した公開用データ
const publicData = sanitizeForPublic(product);
const { Content } = await product.render();
---

<BaseLayout title={publicData.title} description={publicData.description}>
  <div class="container">
    <article class="product-detail">
      <!-- パンくず -->
      <nav class="breadcrumb">
        <a href="/">商品一覧</a>
        <span class="separator">/</span>
        <span>{publicData.title}</span>
      </nav>

      <div class="product-layout">
        <!-- 画像エリア -->
        <div class="product-images">
          <div class="main-image">
            <img 
              src={publicData.coverImage} 
              alt={publicData.title}
              loading="eager"
            />
          </div>
          {publicData.images.length > 0 && (
            <div class="thumbnail-grid">
              {publicData.images.map((img, index) => (
                <button 
                  class="thumbnail" 
                  data-index={index}
                  type="button"
                  aria-label={`画像 ${index + 1} を表示`}
                >
                  <img src={img} alt="" loading="lazy" />
                </button>
              ))}
            </div>
          )}
        </div>

        <!-- 商品情報 -->
        <div class="product-info">
          <header>
            <StatusBadge status={publicData.status} />
            <h1>{publicData.title}</h1>
            <p class="price">¥{publicData.price.toLocaleString()}</p>
          </header>

          <!-- タグ -->
          {publicData.tags.length > 0 && (
            <div class="tags">
              {publicData.tags.map((tag) => (
                <a href={`/?tag=${encodeURIComponent(tag)}`} class="tag">
                  {tag}
                </a>
              ))}
            </div>
          )}

          <!-- 購入ボタン -->
          <div class="purchase-area">
            {shouldShowPurchaseUrl(publicData.status) && publicData.purchaseUrl ? (
              <a 
                href={publicData.purchaseUrl} 
                class="btn btn-primary" 
                target="_blank" 
                rel="noopener noreferrer"
              >
                購入ページへ
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                  <polyline points="15 3 21 3 21 9" />
                  <line x1="10" y1="14" x2="21" y2="3" />
                </svg>
              </a>
            ) : publicData.status === 'reserved' ? (
              <div class="status-message reserved">
                <span>取り置き中です</span>
              </div>
            ) : publicData.status === 'sold' ? (
              <div class="status-message sold">
                <span>この商品は売却済みです</span>
              </div>
            ) : null}
          </div>

          <!-- 説明（サマリー） -->
          <div class="summary">
            <p>{publicData.description}</p>
          </div>

          <!-- メタ情報 -->
          <div class="meta">
            <dl>
              <div>
                <dt>公開日</dt>
                <dd>{publicData.publishedAt.toLocaleDateString('ja-JP')}</dd>
              </div>
              <div>
                <dt>更新日</dt>
                <dd>{publicData.updatedAt.toLocaleDateString('ja-JP')}</dd>
              </div>
            </dl>
          </div>
        </div>
      </div>

      <!-- 詳細説明（Markdown本文） -->
      <section class="description">
        <h2>詳細説明</h2>
        <div class="prose">
          <Content />
        </div>
      </section>

      <!-- 一覧へ戻る -->
      <nav class="back-nav">
        <a href="/">← 商品一覧へ戻る</a>
      </nav>
    </article>
  </div>
</BaseLayout>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: var(--color-text-muted);
  }

  .breadcrumb a:hover {
    color: var(--color-primary);
  }

  .separator {
    opacity: 0.5;
  }

  .product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    .product-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  .main-image {
    aspect-ratio: 1;
    background: var(--color-bg);
    border-radius: var(--radius);
    overflow: hidden;
  }

  .main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .thumbnail-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .thumbnail {
    aspect-ratio: 1;
    border: 2px solid transparent;
    border-radius: calc(var(--radius) / 2);
    overflow: hidden;
    cursor: pointer;
    padding: 0;
    background: none;
    transition: border-color 0.2s, opacity 0.2s;
    opacity: 0.7;
  }

  .thumbnail:hover,
  .thumbnail:focus {
    opacity: 1;
    border-color: var(--color-primary);
    outline: none;
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-info header {
    margin-bottom: 1.5rem;
  }

  .product-info h1 {
    font-size: 1.75rem;
    margin: 0.75rem 0 0.5rem;
    line-height: 1.3;
  }

  .price {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .purchase-area {
    margin-bottom: 1.5rem;
  }

  .purchase-area .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    padding: 1rem;
    font-size: 1.125rem;
    justify-content: center;
  }

  .status-message {
    padding: 1rem;
    border-radius: var(--radius);
    text-align: center;
    font-weight: 500;
  }

  .status-message.reserved {
    background: #fef9c3;
    color: #a16207;
  }

  .status-message.sold {
    background: #fee2e2;
    color: #dc2626;
  }

  .summary {
    padding: 1rem 0;
    border-top: 1px solid var(--color-border);
  }

  .summary p {
    margin: 0;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .meta {
    padding: 1rem 0;
    border-top: 1px solid var(--color-border);
  }

  .meta dl {
    display: flex;
    gap: 2rem;
    margin: 0;
  }

  .meta dl > div {
    display: flex;
    gap: 0.5rem;
  }

  .meta dt {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .meta dd {
    font-size: 0.875rem;
    margin: 0;
  }

  .description {
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
    margin-bottom: 2rem;
  }

  .description h2 {
    font-size: 1.25rem;
    margin: 0 0 1rem;
  }

  .prose {
    line-height: 1.8;
  }

  .prose :global(h2) {
    font-size: 1.25rem;
    margin: 2rem 0 1rem;
  }

  .prose :global(h3) {
    font-size: 1.1rem;
    margin: 1.5rem 0 0.75rem;
  }

  .prose :global(p) {
    margin: 0 0 1rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 0 0 1rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin: 0.25rem 0;
  }

  .back-nav {
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .back-nav a {
    color: var(--color-text-muted);
  }

  .back-nav a:hover {
    color: var(--color-primary);
  }
</style>

<script>
  // サムネイルクリックで画像切り替え
  document.addEventListener('DOMContentLoaded', () => {
    const mainImage = document.querySelector('.main-image img') as HTMLImageElement;
    const thumbnails = document.querySelectorAll('.thumbnail');
    const allImages = [mainImage?.src, ...Array.from(thumbnails).map(t => (t.querySelector('img') as HTMLImageElement)?.src)].filter(Boolean);

    thumbnails.forEach((thumb, index) => {
      thumb.addEventListener('click', () => {
        if (mainImage && allImages[index + 1]) {
          mainImage.src = allImages[index + 1];
        }
      });
    });
  });
</script>
